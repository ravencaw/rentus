{% extends 'base_back.html.twig' %}

{% block title %}Cita{% endblock %}

{% block body %}
<a  class="btn btn-light" href="{{ path('cita_index', {id: app.session.get('usuario_id')}) }}"><i class="fa fa-arrow-left"></i></a>
    <h1>Cita</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td id="id">{{ citum.id }}</td>
            </tr>
            <tr>
                <th>Fecha_hora</th>
                <td>{{ citum.fechaHora ? citum.fechaHora|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Convocante</th>
                <td>{{ convocante.nombre }}</td>
            </tr>
            <tr>
                <th>Convocado</th>
                <td>{{ convocado.nombre }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ citum.direccion }}</td>
            </tr>
            <tr>
                <th>Ciudad</th>
                <td>{{ citum.ciudad }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <h1>Lugar de encuentro</h1>
    <hr>
    <div id="map" class="col-md-12"></div>

    
    {% if app.session.get('usuario_inmobiliaria') %}
        <a href="{{ path('cita_edit', {'id': citum.id}) }}">Editar cita</a>

        {{ include('cita/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/cita/show.js') }}"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBX1Qy2dFMigK3r7pwgCBFC90exmctPt6g&callback=initMap"></script>
{% endblock %}