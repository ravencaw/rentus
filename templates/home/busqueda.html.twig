{% extends 'base.html.twig' %}

{% block title %}Busqueda{% endblock %}

{% block body %}
 <div class="busqueda">
 <div id="wrapper" class="container col-md-12" style="margin: 0px;color: rgb(0,0,0);background-color: rgba(39,104,104,0);">
            <div id="#sidebar-wrapper" class="col-md-2" style="color: rgb(0,0,0);padding: 0px;background-color: rgba(39,104,104,0);">
                <div id="sidebar-wrapper" style="background-color: rgb(39,104,104);color: rgb(0,0,0);text-align:right;">
                    <ul class="sidebar-nav">
                        <li>Precio </li>
                        <li>Precio/m<sup>2</sup> </li>
                        <li>Superficie </li>
                        <li>Zona </li>
                        <li>Nº de habitaciones </li>
                        <li>Nº de baños </li>
                        <li>Extras </li>
                        <li>Inmobiliaria </li>
                     </ul>
                 </div>
             </div>   
         </div>
{% for inmueble in inmuebles %}
        <div class="card mb-3 col-md-9">
            <a href="resultado/{{ inmueble.id }}">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{ asset('img/inmuebles/')  }}{{ inmueble.id }}/{{ fotos[inmueble.id].ruta}}" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ inmueble.direccion }}</h5>
                            <p class="card-text">Precio: {{ inmueble.precio }} €</p>
                            <p class="card-text">{{ inmueble.ciudad }} {{ inmueble.cp }}</p>
                            <p class="card-text"><small class="text-muted">{{ inmueble.superficie }} m<sup>2</sup> - {{ (inmueble.precio/inmueble.superficie)|round(2,'floor') }} €/m<sup>2</sup></small></p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        
{% else %}
    <span align="center">No se han encontrado registros</span>
{% endfor %}
</div>
{% endblock %}